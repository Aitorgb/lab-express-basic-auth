<div class="container-fluid" id="signup">
  <h2>Create account</h2>
  <form action="/signup" method="POST">
    <div class="col-lg-3">
        <div class="form-group">
            <label for="input-username">Username</label>
            <input class="form-control w-20 {{#if error.username}} is-invalid {{/if}}" type="text" id="input-username" value="{{user.username}}" name="username" placeholder="Your username" />
               {{#if error.username}} 
                <div class="invalid-feedback">
                   {{error.username.message}}
                </div>
                {{/if}}
        </div>
        <div class="form-group">
            <label for="input-password">Password</label>
            <input class="form-control w-40 {{#if error.password}} is-invalid {{/if}}" type="password" name="password" id="input-password" placeholder="********" />
             {{#if error.password}}
                <div class="invalid-feedback">
                    {{error.password.message}}
                </div>
            {{/if}}
        </div>
        <button class="btn btn-success" type="submit">Create account</button>
    </div>

  </form>
</div>